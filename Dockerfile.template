# RUN git clone -b 'release/1.6' --single-branch --depth 1 https://github.com/ethereum/go-ethereum.git ~/go-ethereum
# RUN cd ~/go-ethereum && make geth
# RUN cp ~/go-ethereum/build/bin/geth /usr/local/bin/

RUN wget https://gethstore.blob.core.windows.net/builds/geth-linux-arm7-1.6.6-10a45cb5.tar.gz
RUN tar -xvf geth-linux-arm7-1.6.6-10a45cb5.tar.gz
RUN cp geth-linux-arm7-1.6.6-10a45cb5/geth /usr/local/bin

COPY . /app
RUN chmod +x /app/run.sh

# Generate DAG
RUN mkdir -p ~/.ethash
RUN geth makedag 0 ~/.ethash

#Â Start mining
CMD /app/run.sh


